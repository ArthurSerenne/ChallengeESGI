{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h1>Report</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ report.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ report.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ report.createdAt ? report.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfClients</th>
                <td>{{ report.numberOfClients }}</td>
            </tr>
            <tr>
                <th>NumberOfInvoices</th>
                <td>{{ report.numberOfInvoices }}</td>
            </tr>
            <tr>
                <th>NumberOfQuotes</th>
                <td>{{ report.numberOfQuotes }}</td>
            </tr>
            <tr>
                <th>TotalEarned</th>
                <td>{{ report.totalEarned }}</td>
            </tr>
            <tr>
                <th>Revenue</th>
                <td>{{ report.revenue }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_report_index') }}">back to list</a>

    <a href="{{ path('app_report_edit', {'id': report.id}) }}">edit</a>

    {{ include('report/_delete_form.html.twig') }}
{% endblock %}
