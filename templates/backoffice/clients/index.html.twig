{% extends 'backoffice/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="p-6">
        <div class="mb-6 pl-64">
            <div class="w-full bg-white rounded-md border border-gray-100 p-4 shadow-md shadow-black/5">
                <h1 class="pb-4 text-4xl font-bold mb-6">Liste des clients <i class="fa-solid fa-users"></i></h1>
                <a href="{{ path('app_clients_create') }}">Ajouter un Client <i class="fa-solid fa-plus"></i></a>
                <table class="min-w-full border-collapse mt-8">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="border border-gray-300 p-4 text-left">Nom</th>
                            <th class="border border-gray-300 p-4 text-left">Prénom</th>
                            <th class="border border-gray-300 p-4 text-left">Email</th>
                            <th class="border border-gray-300 p-4 text-left">Téléphone</th>
                            <th class="border border-gray-300 p-4 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for clients in clients %}
                            <tr>
                                <td class="border border-gray-300 p-4 text-left">{{ clients.Name }}</td>
                                <td class="border border-gray-300 p-4 text-left">{{ clients.lastname }}</td>
                                <td class="border border-gray-300 p-4 text-left">{{ clients.email }}</td>
                                <td class="border border-gray-300 p-4 text-left">{{ clients.phone }}</td>
                                <td class="border border-gray-300 p-4 text-left flex justify-around">
                                    <a href="{{ path('app_clients_view', {id: clients.id}) }}"><i class="fa-solid fa-eye"></i></a>
                                    <a href="{{ path('app_clients_edit', {id: clients.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <form method="post" action="{{ path('app_clients_delete', {id: clients.id}) }}" onsubmit="return confirm('Sur de vouloir supprimer ce client ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clients.id) }}">
                                        <button><i class="fa-solid fa-trash-can text-red-500"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
